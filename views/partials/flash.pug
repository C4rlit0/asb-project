//- Add dismiss functionality
script.
  document.querySelectorAll('.btn-dismiss').forEach(function(btn) {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.alert').forEach(function(alert) {
        alert.style.display = 'none';
      });
    });
  });