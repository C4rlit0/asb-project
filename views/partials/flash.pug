//- New tailwindcss flash messages
if messages.errors
  .alert.shadow-lg(role='alert')
    svg.stroke-current.shrink-0.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24')
      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z')
    div
      h3.font-bold Error
        for error in messages.errors
          .text-xs= error.msg
    button.btn.btn-sm.btn-dismiss &times;

if messages.info
  .alert.alert-info.shadow-lg(role='alert')
    svg.stroke-current.shrink-0.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24')
      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z')
    for info in messages.info
      span= info.msg
    div
      button.btn.btn-sm.btn-dismiss &times;

if messages.success
  .alert.alert-success.shadow-lg(role='alert')
    svg.stroke-current.shrink-0.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24')
      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z')
    for success in messages.success
      span= success.msg
    div.bg-transparent
      button.btn.btn-sm.btn-dismiss &times;

