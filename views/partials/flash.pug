if messages.errors
  .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative(role='alert')
    for error in messages.errors
      div= error.msg
    button(type='button' class='absolute top-0 bottom-0 right-0 px-4 py-3' data-bs-dismiss='alert' aria-label='Close') &times;

if messages.info
  .bg-blue-100.border.border-blue-400.text-blue-700.px-4.py-3.rounded.relative(role='alert')
    for info in messages.info
      div= info.msg
    button(type='button' class='absolute top-0 bottom-0 right-0 px-4 py-3' data-bs-dismiss='alert' aria-label='Close') &times;

if messages.success
  .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.relative(role='alert')
    for success in messages.success
      div= success.msg
    button(type='button' class='absolute top-0 bottom-0 right-0 px-4 py-3' data-bs-dismiss='alert' aria-label='Close') &times;
